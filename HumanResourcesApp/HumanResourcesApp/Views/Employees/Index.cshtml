@using HumanResourcesApp.Views.Shared;
@model HumanResourcesApp.Controllers.IndexModel

@{
    ViewBag.Title = "Index";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Employees", FormMethod.Get))
{
    <fieldset>
        @Html.DropDownList("departmentIdFilter")
        @Html.DropDownList("statusIdFilter")
        <input type="submit" value="Submit" />
    </fieldset>
}

<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Date Of Birth
        </th>
        <th>
            Department
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Employees)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department1.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status1.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeNumber }) |
                @Html.ActionLink("Details", "Details", new { id = item.EmployeeNumber }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeNumber })
            </td>
        </tr>
    }

</table>

@{
    var prevDisabled = !Model.Employees.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Employees.HasNextPage ? "disabled" : "";
}

<ul class="pagination">
    <li class="page-item @prevDisabled">
        <a asp-page="./Index"
           asp-route-pageIndex="@(Model.Employees.PageIndex - 1)"
           asp-route-departmentIdFilter="@Model.DepartmentIdFilter"
           asp-route-statusIdFilter="@Model.StatusIdFilter"
           class="page-link">
            <
        </a>
    </li>

    <li class="page-item pages m-auto">
        <a>@Model.Employees.PageIndex of @Model.Employees.TotalPages</a>
    </li>
    <li class="page-item @nextDisabled">
        <a asp-page="./Index"
           asp-route-pageIndex="@(Model.Employees.PageIndex + 1)"
           asp-route-departmentIdFilter="@Model.DepartmentIdFilter"
           asp-route-statusIdFilter="@Model.StatusIdFilter"
           class="page-link">
            >
        </a>
    </li>
</ul>